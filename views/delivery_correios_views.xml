<odoo>
    <record id="view_delivery_carrier_correios_form" model="ir.ui.view">
        <field name="name">delivery.carrier.correios.form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Correios">
                    <field name="correios_service_codes" widget="many2many_tags" options="{'no_create': True}"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
