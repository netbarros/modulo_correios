<odoo>
    <record id="view_correios_config_settings" model="ir.ui.view">
        <field name="name">correios.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <form string="Configurações dos Correios">
                <sheet>
                    <group string="Configuração da API">
                        <field name="correios_user"/>
                        <field name="correios_password" password="True"/>
                        <field name="correios_contract_code"/>
                        <field name="correios_sender_zip"/>
                    </group>
                    <group>
                        <field name="correios_validated" readonly="1"/>
                        <button name="validate_correios_connection" type="object"
                                string="Validar Conexão" class="btn-primary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
